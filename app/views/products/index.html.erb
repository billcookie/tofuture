<style>
  body {
    background: rgba(240,240,240,0.8)
  }
</style>
<div class="container">
  <h1 class="page-header">Products</h1>
  <div class="d-flex justify-content-center">
    <div class="main-grid d-flex">
      <div class="search-form mb-5">
        <h4>Refine your search:</h4>
        <%= simple_form_for :search, url: products_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :sector, collection: Product::SECTORS, as: :check_boxes, input_html: {value: ""}, label: "Choose an industry" %>
          <%= f.submit 'Search', class: "btn btn-flat"%>
        <% end %>
      </div>
      <div class="product-cards d-flex flex-wrap gap-3 align-self-start ms-5">
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <div class="card-product">
              <div class="card-head">
                <div class="back-text truncate">
                  <%= product.ticker %>
                </div>
              </div>
              <div class="card-body-product">
                <div class="product-desc">
                  <h2 class="product-title truncate">
                    <%= product.name %>
                  </h2>
                  <span class="product-caption">
                  </span>
                </div>
                <p> <%= product.sector %> </p>
                <div class="product-properties">
                  <% product.issue_list.each do |issue| %>
                    <span class="badge truncate">
                      <%= issue %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
