<div class="banner">
  <div class="home-navbar">
    <%= render "shared/navbar" %>
  </div>
  <div class="container">
    <div class="banner-content">
      <div class="banner-information">
        <h1 class="banner-h1">Invest <br>in change</h1>
        <!-- <p>Invest in <strong>change</strong>.</p> -->
        <div class="searchbar">
          <%= form_tag search_path, method: :get, class: "d-flex my-3" do %>
            <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Search"%>
            <%= submit_tag "Search", class: "btn btn-ghost"%>
          <% end %>
        </div>
      </div>
      <div class="banner-card">
        <%= link_to product_path(@product) do %>
          <div class="card-product">
            <div class="card-head">
              <div class="back-text truncate">
                <%= @product.ticker %>
              </div>
            </div>
            <div class="card-body-product">
              <div class="product-desc">
                <h2 class="product-title truncate">
                  <%= @product.name %>
                </h2>
                <span class="product-caption">
                </span>
              </div>
              <p> <%= @product.sector %> </p>
              <div class="product-properties">
                <% @product.issue_list.each do |issue| %>
                  <span class="badge truncate">
                    <%= issue %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="trending">
      <h2 class="banner-h2">Trending Topics</h2>
      <div class="trending-btn">
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Employee Diversity"%>
          <%= submit_tag "Employee Diversity", class: "btn btn-flat"%>
        <% end %>
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Carbon Emissions"%>
          <%= submit_tag "Carbon Emissions", class: "btn btn-flat"%>
        <% end %>
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Green Energy"%>
          <%= submit_tag "Green Energy", class: "btn btn-flat"%>
        <% end %>
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Animal Welfare"%>
          <%= submit_tag "Animal Welfare", class: "btn btn-flat"%>
        <% end %>
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Labor Standards"%>
          <%= submit_tag "Labor Standards", class: "btn btn-flat"%>
        <% end %>
        <%= form_tag search_path, method: :get do %>
          <%= hidden_field_tag :query,
                    params[:query] = "Employee Diversity"%>
          <%= submit_tag "Employee Diversity", class: "btn btn-flat"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
