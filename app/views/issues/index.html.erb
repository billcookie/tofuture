<div class="container">
  <div class="issues-title">
    <h2 class="page-header">Issues</h2>
  </div>
  <div class="cards">
    <% @issues.each do |issue| %>
      <%= link_to issue_path(issue) do %>
        <div class="issue-index-card" style="width: 18rem;">
          <img src="<%= issue.image_url %>" class="issue-img" alt="...">
          <div class="card-body">
            <div class="issue-text">
              <p class="card-text"> <%= issue.issue_name %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
