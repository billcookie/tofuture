<div class="container">
  <div class="issues-title">
    <h2 class="page-header">Issues</h2>
  </div>
  <div class="row cards">
    <% @issues.each do |issue| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= issue.image_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <div class="issue-text">
            <p class="card-text"> <%= issue.issue_name %></p>
            <%= link_to "", issue_path(issue) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
